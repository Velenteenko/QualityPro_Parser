<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-settings>

	<table-settings>
		<field name="basePath">
			<p>smb://192.168.30.100/serv/DBF/m1.DBF</p>
		</field>
		<field name="tempFile">
			<p>m1.DBF</p>
		</field>
		<field name="tempConvertFile">
			<p>m1.csv</p>
		</field>
		<field name="tempDir">
			<p>./tmpdbf/</p>
		</field>
		<field name="columnIndex">
			<!-- Insert here indexes of rows (tag: "<p>"). Before that, look at fields 
				in table. Calculation of indexes is zero("0"). Class: ua.com.vza.readdbf.ReadDbf 
				getCollumnIndex() -->
			<p>2</p>
		</field>
		<field name="charset">
			<p>CP1251</p>
		</field>
	</table-settings>

	<text-regex-settings>
		<!-- При добавлении регулярного выражения нужно учитывать количество "\" 
			в коде, конвертируется в: "\\" в файле конфигурации должно быть: "\" (напр. 
			Код - "\\d" Файл - "\d") -->
		<regex name="gost">
			<r>ГОСТ\s?\d+((\-|\:)\d+)+</r>
		</regex>
		<regex name="ost">
			<r>(.?)([^Г|\S]ОСТ\s?\d+((\-|\:)\d+)+)</r>
		</regex>
		<regex name="tu">
			<r>(.?)([^ДС|\S]ТУ\s?\S+\d+)</r>
		</regex>
		<regex name="dstu">
			<r>ДСТУ\s?\d+((\-|\:)\d+)+</r>
		</regex>
		<regex name="mark">
			<r>(/\s?)(\S+)</r>
		</regex>

		<regexGroup name="gost">
			<g>0</g>
		</regexGroup>
		<regexGroup name="ost">
			<g>2</g>
		</regexGroup>
		<regexGroup name="tu">
			<g>2</g>
		</regexGroup>
		<regexGroup name="dstu">
			<g>0</g>
		</regexGroup>
		<regexGroup name="mark">
			<g>2</g>
		</regexGroup>

	</text-regex-settings>

	<db-settings>
		<db name="DBDriver">
			<p>com.mysql.jdbc.Driver</p>
		</db>
		<db name="DBConnectionString">
			<p>jdbc:mysql://127.0.0.1:3306/QualityProducts</p>
		</db>
		<db name="DBUserName">
			<p>root</p>
		</db>
		<db name="DBPassword">
			<p>root</p>
		</db>
		<!-- ///////////////////////////////// -->
		<db name="selectName">
			<p>SELECT (name) FROM sprProductName</p>
		</db>
		<db name="insertName">
			<p>INSERT INTO sprProductName (name) VALUES (?)</p>
		</db>
		<db name="selectSpGOST">
			<p>SELECT (gost) FROM sprStandart</p>
		</db>
		<db name="insertSpGOST">
			<p>INSERT INTO sprStandart (gost) VALUES (?)</p>
		</db>
		<db name="selectSpOST">
			<p>SELECT (ost) FROM sprStandart</p>
		</db>
		<db name="insertSpOST">
			<p>INSERT INTO sprStandart (ost) VALUES (?)</p>
		</db>
		<db name="selectSpTU">
			<p>SELECT (tu) FROM sprStandart</p>
		</db>
		<db name="insertSpTU">
			<p>INSERT INTO sprStandart (tu) VALUES (?)</p>
		</db>
		<db name="selectSpDSTU">
			<p>SELECT (DSTU) FROM sprStandart</p>
		</db>
		<db name="insertSpDSTU">
			<p>INSERT INTO sprStandart (DSTU) VALUES (?)</p>
		</db>
		<db name="selectProductType">
			<p>SELECT (name) FROM sprProductType</p>
		</db>
		<db name="insertProductType">
			<p>INSERT INTO sprProductType (name) VALUES (?)</p>
		</db>
		<db name="selectCountRecord">
			<p>SELECT
				(af_parseName,af_parseMark,af_parseGOST,af_parseOST,af_parseTU,
				af_parseDSTU) FROM sprCountLinesInDBF WHERE id=1
			</p>
		</db>
		<db name="updateCountRecord">
			<p>UPDATE sprCountLinesInDBF SET gost=?, ost=?, tu=?, dstu=? WHERE
				id=1
			</p>
		</db>
	</db-settings>

	<const-settings>
		<const name="gost">
			<con>ГОСТ</con>
		</const>
		<const name="ost">
			<con>ОСТ</con>
		</const>
		<const name="tu">
			<con>ТУ</con>
		</const>
		<const name="dstu">
			<con>ДСТУ</con>
		</const>
	</const-settings>

</app-settings>