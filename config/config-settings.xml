			<p>com.mysql.jdbc.Driver</p>
		</db>
		<db name="DBConnectionString">
			<p>jdbc:mysql://192.168.31.200:3306/QualityOfProducts</p>
		</db>
		<db name="DBUserName">
			<p>username</p>
		</db>
		<db name="DBPassword">
			<p>adminpass</p>
		</db>
		<!-- ///////////////////////////////// -->
		<db name="selectName">
			<p>SELECT * FROM sprProductName</p>
		</db>
		<db name="updateName">
			<p>INSERT INTO sprProductName (name) VALUES (?)</p>
