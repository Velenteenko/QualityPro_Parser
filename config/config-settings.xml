		<db name="selectProductType">
			<p>SELECT * FROM sprProductType</p>
		</db>
		<db name="updateProductType">
			<p>INSERT INTO sprProductType (name) VALUES (?)</p>
		</db>
	</db-settings>

	<const-settings>
		<const name="gost">
			<con>ГОСТ</con>
		</const>
		<const name="ost">
			<con>ОСТ</con>
		</const>
		<const name="tu">
			<con>ТУ</con>
		</const>
		<const name="dstu">
			<con>ДСТУ</con>
		</const>
	</const-settings>

</app-settings>