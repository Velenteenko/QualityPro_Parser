<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-settings>

	<table-settings>
		<field name="basePath">
			<p>smb://192.168.30.100/serv/DBF/m1.DBF</p>
		</field>
		<field name="tempFile">
			<p>m1.DBF</p>
		</field>
		<field name="tempConvertFile">
			<p>m1.csv</p>
		</field>
		<field name="tempDir">
			<p>./tmpdbf/</p>
		</field>
		<field name="columnIndex">
			<!-- Insert here indexes of rows (tag: "<p>"). Before that, look at fields 
				in table. Calculation of indexes is zero("0"). Class: ua.com.vza.readdbf.ReadDbf 
				getCollumnIndex() -->
			<p>2</p>
		</field>
		<field name="charSet">
			<p>CP1251</p>
		</field>
	</table-settings>

	<text-regex-settings>
		<!-- При добавлении регулярного выражения нужно учитывать количество "\" 
			в коде, конвертируется в: "\\" в файле конфигурации должно быть: "\" (напр. 
			Код - "\\d" Файл - "\d") -->
		<regex name="gost">
			<r>ГОСТ\s?\d+((\-|\:)\d+)+</r>
		</regex>
		<regex name="ost">
			<r>(.?)([^Г|\S]ОСТ\s?\d+((\-|\:)\d+)+)</r>
		</regex>
		<regex name="tu">
			<r>(.?)([^ДС|\S]ТУ\s?\S+\d+)</r>
		</regex>
		<regex name="dstu">
			<r>ДСТУ\s?\d+((\-|\:)\d+)+</r>
		</regex>
		<regex name="mark">
			<r>(/\s?)(\S+)</r>
		</regex>

		<regexGroup name="gost">
			<g>0</g>
		</regexGroup>
		<regexGroup name="ost">
			<g>2</g>
		</regexGroup>
		<regexGroup name="tu">
			<g>2</g>
		</regexGroup>
		<regexGroup name="dstu">
			<g>0</g>
		</regexGroup>
		<regexGroup name="mark">
			<g>2</g>
		</regexGroup>

	</text-regex-settings>

	<db-settings>
